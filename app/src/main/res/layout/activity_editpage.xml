<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.u5778016.note_taking.editpage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="title:"
        android:id="@+id/textView_titleE"
        android:layout_alignTop="@+id/editText_titleE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="content:"
        android:id="@+id/textView_contentE"
        android:layout_below="@+id/editText_titleE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="important:"
        android:id="@+id/textView_importantE"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/textView_contentE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_titleE"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_contentE"
        android:layout_toEndOf="@+id/textView_contentE" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_contentE"
        android:layout_alignTop="@+id/textView_contentE"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_importantE"
        android:layout_toEndOf="@+id/textView_importantE" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_importantE"
        android:layout_alignBottom="@+id/textView_importantE"
        android:layout_alignRight="@+id/editText_contentE"
        android:layout_alignEnd="@+id/editText_contentE"
        android:layout_alignLeft="@+id/editText_contentE"
        android:layout_alignStart="@+id/editText_contentE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_dateE"
        android:layout_below="@+id/textView_importantE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:background="#a8a3e7"
        android:layout_toLeftOf="@+id/editText_importantE"
        android:layout_toStartOf="@+id/editText_importantE" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change"
        android:id="@+id/button_changeE"
        android:layout_below="@+id/textView_dateE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

</RelativeLayout>
